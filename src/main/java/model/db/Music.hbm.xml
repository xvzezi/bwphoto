<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="model.db">
	<class name="Music" table="music">
		<composite-id>
		<key-property name="name" column="name" type="java.lang.String"  length="10"></key-property>
		<key-property name="author" column="author" type="java.lang.String" length="10"></key-property>
		</composite-id>
		<property name="music" column="music" type="byte[]"
			not-null="true" length="500000" />
	    <one-to-one name="item" class="Item" property-ref="music"/>
	</class>
</hibernate-mapping> 