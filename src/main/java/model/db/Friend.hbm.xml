<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="model.db">
	<class name="Friend" table="friend">
		<composite-id>
		<key-property name="myName" column="my_name" type="java.lang.String"  length="10"></key-property>
		<key-property name="frName" column="fr_name" type="java.lang.String"  length="10"></key-property>
		</composite-id>
        <one-to-one name="user" class="User" property-ref="friend"/>
	</class>
</hibernate-mapping> 