<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="model.db">
	<class name="Itemtag" table="itemtag">
		<composite-id>
		<key-property name="itemId" column="item_id" type="java.lang.String" length="10"></key-property>
		<key-property name="tagName" column="tag_name" type="java.lang.String"  length="10"></key-property>
		</composite-id>
		<one-to-one name="item" class="Item" property-ref="itemtag"/>
		<one-to-one name="tag" class="Tag" property-ref="itemtag"/>
	</class>
</hibernate-mapping> 